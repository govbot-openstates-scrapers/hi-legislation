{"legislative_session": "2026", "identifier": "SB2079", "title": "RELATING TO VEHICLE TITLES.", "from_organization": "~{\"classification\": \"upper\"}", "classification": ["bill"], "subject": ["Director of Finance", "Ownership", "Surety Bond", "Vehicle Title"], "abstracts": [{"note": "description", "abstract": "Requires the county Director of Finance to issue a temporary, three-year title to an applicant in cases where no prior title exists, the prior owner is unable to provide one, or the Director is otherwise not satisfied as to the ownership of the vehicle.  Requires the applicant to provide a surety bond and certain documentation to the Director.  Allows for a right of action against the surety bond and temporary title.  Requires the temporary title to convert to a full title after three years unless a suit has been instituted against the temporary title."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Pending Introduction.", "date": "2026-01-14", "organization_id": "~{\"classification\": \"upper\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "KANUHA", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"KANUHA\"}", "organization_id": null}, {"name": "CHANG", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"CHANG\"}", "organization_id": null}, {"name": "HASHIMOTO", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"HASHIMOTO\"}", "organization_id": null}, {"name": "KIDANI", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"KIDANI\"}", "organization_id": null}, {"name": "LAMOSAO", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"LAMOSAO\"}", "organization_id": null}, {"name": "MCKELVEY", "classification": "primary", "entity_type": "person", "primary": true, "perso