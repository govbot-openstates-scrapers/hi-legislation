{"legislative_session": "2026", "identifier": "SB1024", "title": "RELATING TO PUBLIC HOUSING.", "from_organization": "~{\"classification\": \"upper\"}", "classification": ["bill"], "subject": ["Allowed", "Appropriations ($)", "HPHA", "Pet Animals"], "abstracts": [{"note": "description", "abstract": "Requires the Hawaii Public Housing Authority to allow any resident of a public housing project or state low-income housing project to keep one or more pet animals in the resident's unit, subject to applicable state laws, county ordinances, and any reasonable conditions.  Provides that HPHA may charge a refundable deposit for each pet animal but shall not impose a monthly pet fee or pet rent.  Allows HPHA to remove a vicious animal to protect persons or property.  Establishes positions.  Appropriates funds."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Carried over to 2026 Regular Session.", "date": "2025-12-08", "organization_id": "~{\"classification\": \"legislature\"}", "classification": ["carried-over"], "related_entities": []}, {"description": "Referred to HOU, WAM/JDC.", "date": "2025-01-23", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["referral-committee"], "related_entities": [{"name": "Housing", "entity_type": "organization", "organization_id": null}, {"name": "Ways and Means", "entity_type": "organization", "organization_id": null}, {"name": "Judiciary", "entity_type": "organization", "organization_id": null}]}, {"description": "Passed First Reading.", "date": "2025-01-21", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Introduced.", "date": "2025-01-17", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["introduction"], "related_entities": []}], "sponsorships": [{"name": "LEE", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"LEE\"}", "organizati