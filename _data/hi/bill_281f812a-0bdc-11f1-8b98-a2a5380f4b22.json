{"legislative_session": "2026", "identifier": "HB1531", "title": "RELATING TO EMERGENCY ANNOUNCEMENTS.", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": ["American Sign Language", "Broadcast Media", "Emergency", "Official Announcements", "Sign Language Interpreter"], "abstracts": [{"note": "description", "abstract": "Requires the Governor or mayor of a county to provide an American Sign Language interpreter during each official announcement broadcast via television or the Internet during a state of emergency.  Requires the Governor or mayor of a county to ensure, to the fullest extent possible, that the American Sign Language interpreter's face, body, arms, and hands are visible during the broadcast.  Requires a news media outlet to display the American Sign Language interpreter in a picture-in-picture window during broadcasts of official emergency announcements."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Prefiled.", "date": "2026-01-14", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "KONG", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"KONG\"}", "organization_id": null}], "related_bills": [], "versions": [{"note": "HB1531", "links": [{"url": "https://data.capitol.hawaii.gov/sessions/session2026/bills/HB1531_.HTM", "media_type": "text/html"}, {"url": "https://data.capitol.hawaii.gov/sessions/session2026/bills/HB1531_.PDF", "media_type": "application/pdf"}], "date": "", "classification": ""}], "documents": [], "citations": [], "sources": [{"url": "https://capitol.hawaii.gov/session/measure_indiv.aspx?billtype=HB&billnumber=1531&year=2026", "note": ""}], "extras": {}, "jurisdiction": {"id": "ocd-jurisdiction/country:us/state:hi/government", "name": "Hawaii", "classification": "state", "division_id": "ocd-division/country:us/state:hi"}, "scraped_at": "20