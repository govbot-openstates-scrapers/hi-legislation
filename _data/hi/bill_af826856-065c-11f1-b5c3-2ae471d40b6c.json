{"legislative_session": "2026", "identifier": "SB2277", "title": "RELATING TO HOSPITAL PRICE TRANSPARENCY.", "from_organization": "~{\"classification\": \"upper\"}", "classification": ["bill"], "subject": ["Civil Penalties", "Consumer Protection", "DOH", "Enforcement", "Federal Requirements", "Health Care", "Hospitals", "Price Transparency"], "abstracts": [{"note": "description", "abstract": "Requires each hospital in the State to comply with federal hospital price transparency requirements.  Requires the Department of Health to monitor and enforce compliance.  Establishes a process for patients to challenge debt collection actions filed by a noncompliant hospitals.  Requires the Department of Health to publish a list of any enforcement actions taken against noncompliant hospitals.  Requires hospitals to provide patients with an easy-to-understand itemized bill statement before initiating a debt collection action against a patient."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Pending Introduction.", "date": "2026-01-15", "organization_id": "~{\"classification\": \"upper\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "SAN BUENAVENTURA", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"SAN BUENAVENTURA\"}", "organization_id": null}, {"name": "CHANG", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"CHANG\"}", "organization_id": null}, {"name": "KEOHOKALOLE", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"KEOHOKALOLE\"}", "organization_id": null}, {"name": "KIDANI", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"KIDANI\"}", "organization_id": null}, {"name": "MCKELVEY", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"MCKELVEY\"}", "organization_id": null}